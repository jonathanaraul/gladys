{% extends "ProyectoPrincipalBundle:Principal:baseproduccion.html.twig" %}

{%block contenido%} <span class="Titulo-Aplicacion" > Unidad IV: Molienda </span>
<span class="Titulo-Aplicacion" > Reporte Diario de Paradas</span>
<span class="Separador_Modulo"></span>
<div class="formulario">
	<div class="unacolumna">
		<div class="nombreinput">
			Fecha :
		</div>
		<div class="cuadroinput">
			<input type="text" name="textfield14" class="inputgrande fecha" id="fe_fecha" value="{{fecha}}" disabled="disabled">
		</div>
	</div>
	<div class="unacolumna">
		<div class="nombreinput">
			Turno :
		</div>
		<div class="cuadroinput">
			<select name="select2" id="tx_turno" class="selectgrande texto">
				<option value="0">-Seleccione-</option>
				{%for turno in turnos%}
					<option value="{{turno.pk}}">{{turno.turno}}</option>
				{%endfor%}
			</select>
		</div>
	</div>
	<div class="unacolumna">
		<div class="nombreinput">
			Inicio :
		</div>
		<div class="cuadroinput">
			<input type="text" name="textfield14" class="inputgrande texto" id="tx_inicio">
		</div>
	</div>
	
	<div class="unacolumna">
		<div class="nombreinput">
			Fin :
		</div>
		<div class="cuadroinput">
			<input type="text" name="textfield14" class="inputgrande texto" id="tx_fin">
		</div>
	</div>
	<div class="unacolumna">
		<div class="nombreinput">
			Descripci&oacute;n :
		</div>
		<div class="cuadroinput">
			<textarea name="textarea" id="tx_descripcion" class="textareagrande texto"></textarea>
		</div>
	</div>
	<div class="unacolumna">
		<div class="nombreinput">
			Insumos :
		</div>
		<div class="cuadroinput">
			<select name="select2" id="tx_insumos" class="selectgrande texto">
				<option value="0">-Seleccione-</option>
				<option value="Oxido Ferrico">&Oacute;xido F&eacute;rrico</option>
				<option value="Sacos Rotos">Sacos Rotos</option>
				<option value="Carbonato">Carbonato</option>
				<option value="Payloader">Payloader</option>
			</select>
		</div>
	</div>
	<div class="unacolumna">
		<div class="nombreinput">
			Cant. de Insumos :
		</div>
		<div class="cuadroinput">
			<input type="text" name="textfield14" class="inputgrande numero" id="nu_cantdeinsumos">
		</div>
	</div>
	<div class="unacolumna">
		<div class="nombreinput">
			Observacion :
		</div>
		<div class="cuadroinput">
			<textarea name="textarea" id="tx_observaciones" class="textareagrande texto"></textarea>
		</div>
	</div>

	<input type="hidden" name="tipoReporte" value="u4-rp">
	<input type="hidden" name="pkReporte" value="{%if arreglo.pk is defined%}{{arreglo.pk}}{%else%}0{%endif%}">
	<span class="Separador_Modulo"></span>
	<div class="botonizquierdo" style="margin-left: 457px;clear:both">
		<div class="Principio-Boton"></div>
		<input type="button" class="Boton" value="Guardar" id="guardarreporte" onclick="return false;">
		<div class="Final-Boton"></div>
	</div>
</div>
<div class="loader" style="display: none">
	<img id="loader" src="{{ asset('imagenes/loader.gif') }}" align="center" style="padding-top: 50px;padding-bottom: 50px;display: block;margin-left: auto;margin-right: auto;">
</div>
{%endblock%} 
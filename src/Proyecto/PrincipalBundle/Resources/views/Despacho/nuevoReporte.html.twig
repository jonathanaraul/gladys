		<div class="cuadroinput">
			<input type="text" name="textfield14"  class="inputgrande" id="nu_montoguia" >
		</div>
	</div>
	<div class="unacolumna" >
		<div class="nombreinput">
			Observaci&oacute;n:
		</div>
		<div class="cuadroinput">
			<textarea name="textarea" id="observacionguia" class="textareagrande texto"></textarea>
		</div>
	</div>
</div>

	<span class="Separador_Modulo" id="separador2" style="display: block"></span>
	<div class="botonizquierdo" id="botonfinal" style="margin-left: 430px;clear:both;display: none">
		<div class="Principio-Boton"></div>
		<input type="button" class="Boton" value="Crear reporte" id="crearreporte" onclick="return false;">
		<div class="Final-Boton"></div>
	</div>
	
<div class="loader" style="display: none;">
	<img id="loader" src="/gladys/imagenes/loader.gif" align="center" style="padding-top: 50px;display: block;margin-left: auto;margin-right: auto;">
</div>

{%endblock%}
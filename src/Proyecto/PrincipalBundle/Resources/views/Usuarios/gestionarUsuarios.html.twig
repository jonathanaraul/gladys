{% extends "ProyectoPrincipalBundle:Principal:base.html.twig" %}
{%block scripts%}
<script type="text/javascript">
var direccionEliminarUsuario = '{{path('ProyectoPrincipalBundle_eliminarusuario')}}';
var direccionModificarEstadoUsuario = '{{path('ProyectoPrincipalBundle_modificarestadousuario')}}';
</script>
{%endblock%}




{%block contenido%} <span class="Titulo-Aplicacion">Gestionar Usuarios</span>
<span class="Separador_Modulo"> </span>
<span class="Sub-Titulo-Aplicacion">Seleccione a los usuarios que desea gestionar:</span>
<div class="Lista-Aplicacion">
<form method="post" action="{{ path('ProyectoPrincipalBundle_deshabilitarusuario') }}">

	<span class="Separador_Modulo"> </span>
	<br>
	<br>
	<div class="Tabla-Aplicacion">
		<div class="Tabla-Fondo">
			<div class="Tabla-Elemento-Encabezado" style="width: 101px;">
				Cedula
			</div>
			<div class="Tabla-Elemento-Encabezado" style="width: 147px;">
				Nombre y Apellido
			</div>
			<div class="Tabla-Elemento-Encabezado" style="width: 120px;">
				Rol
			</div>
			<div class="Tabla-Elemento-Encabezado" style="width: 119px;">
				Habilitar/Deshabilitar
			</div>
			<div class="Tabla-Elemento-Encabezado" style="width: 78px;">
				Eliminar
			</div>
		</div>
		{%for user in usuarios%}
		<div class="Tabla-Fondo">
			
			<div class="Tabla-Elemento" style="width: 91px;text-align: center">{{user.cedula}}</div>
			<div class="Tabla-Elemento" style="width: 137px;text-align: center">{{user.nombre|title}} {{user.apellido|title}}</div>
			<div class="Tabla-Elemento" style="width: 110px;text-align: center">{{user.rol|title}}</div>
			<div class="Tabla-Elemento" style="width: 109px;display: block;text-align: center;">
				
				<img src="{{ asset('imagenes/imagenes/acciones/activar.png') }}" alt="Activar usuario" class="modificarestadousuario" tipo="activar" idusuario="{{user.getI100pkUsuario}}" width="15" style="display: {%if user.getActivo == 1%}none{%else%}block{%endif%};margin-left: auto;margin-right: auto;cursor: pointer;width: 15px;">
				<img src="{{ asset('imagenes/imagenes/acciones/loader.gif') }}" align="center" height="15" style="display: none;margin: auto;">
				<img src="{{ asset('imagenes/imagenes/acciones/desactivar.png') }}" alt="Desactivar usuario" class="modificarestadousuario" tipo="desactivar" idusuario="{{user.getI100pkUsuario}}" align="center" style="display: {%if user.getActivo == 1%}block{%else%}none{%endif%};margin-left: auto;margin-right: auto;cursor: pointer;width: 15px;">
				
			</div>
			<div class="Tabla-Elemento" style="width: 68px;display: block;text-align: center;">
				<img src="{{ asset('imagenes/imagenes/acciones/eliminar.png') }}" class="eliminarusuario" idusuario="{{user.getI100pkUsuario}}"  width="15" style="display: block;margin-left: auto;margin-right: auto;cursor: pointer;">
				<img src="{{ asset('imagenes/imagenes/acciones/loader.gif') }}" align="center" height="15" style="display: none;margin: auto;">
		
			</div>
			
		</div>
		{%endfor%}
				
	</div>
	
	
	
</form>
</div>
{%endblock%} 